<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:layout_above="@+id/layout_actions"
        android:focusableInTouchMode="true">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_marginTop="@dimen/view_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/barlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/layout_zhidian"
                android:background="@color/background"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <FrameLayout
                    android:id="@+id/layout_topexpert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/shortIntroductionPicture"
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:background="@color/white"
                            android:scaleType="centerCrop" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_double">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="36dp"
                                android:textColor="@color/black"
                                android:paddingTop="@dimen/padding_half"
                                android:textSize="@dimen/sevenSize" />

                            <LinearLayout
                                android:id="@+id/layout_want"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/name"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/margin"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_times"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/darkgray"
                                    android:textSize="@dimen/fiveSize" />

                                <TextView
                                    android:id="@+id/tv_appoint_times"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/darkgray"
                                    android:textSize="@dimen/fiveSize" />

                                <TextView
                                    android:id="@+id/tv_answer_times"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/darkgray"
                                    android:textSize="@dimen/fiveSize" />

                                <TextView
                                    android:id="@+id/tv_response_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/darkgray"
                                    android:textSize="@dimen/fiveSize"
                                    android:visibility="visible" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_college"
                                style="@style/sevenBlack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/layout_want"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/margin_half"
                                android:gravity="center"
                                android:paddingLeft="@dimen/padding" />


                            <RadioButton
                                android:id="@+id/btn_follow"
                                android:layout_width="@dimen/margin_top_login_and_register"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_college"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/margin"
                                android:background="@drawable/cb_follow"
                                android:button="@null"
                                android:gravity="center"
                                android:paddingBottom="@dimen/margin_half"
                                android:paddingLeft="@dimen/padding_double"
                                android:paddingRight="@dimen/padding_double"
                                android:paddingTop="@dimen/margin_half"
                                android:text="+ 关注"
                                android:textColor="@drawable/color_white_darkgray"
                                android:textSize="@dimen/sixSize" />
                            <RadioButton
                                android:id="@+id/btn_open_yida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_college"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/margin"
                                android:background="@drawable/bg_yida_border_corner"
                                android:button="@null"
                                android:gravity="center"
                                android:paddingBottom="@dimen/margin_half"
                                android:paddingLeft="@dimen/padding_double"
                                android:paddingRight="@dimen/padding_double"
                                android:paddingTop="@dimen/margin_half"
                                android:text="开通益答"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sixSize" />
                        </RelativeLayout>

                        <View style="@style/view_cutline" />


                    </LinearLayout>

                    <include
                        android:id="@+id/avatar"
                        layout="@layout/include_45_avatar"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp" />

                    <TextView
                        android:id="@+id/tv_follow_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="74dp"
                        android:background="@drawable/bg_basecolor_corner_small"
                        android:drawableLeft="@mipmap/ic_follow_times"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fourSize" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray"/>
                </FrameLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/tl_expert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@color/basecolor"
                    android:background="@color/white"
                    app:tabMode="fixed"
                    android:layout_gravity="center"
                    app:tabSelectedTextColor="@color/basecolor"
                    app:tabTextColor="@color/darkgray"
                    />
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.CoordinatorLayout>

        <include
            android:id="@+id/layout_top"
            layout="@layout/include_back_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_alignParentTop="true" />

        <View
            style="@style/view_cutline"
            android:layout_marginTop="@dimen/view_height" />

        <View
            android:id="@+id/view_bg_appoint"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black_overlay"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_select_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:background="@color/transparent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_topics_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding"
                android:background="@drawable/img_appoint"
                android:orientation="vertical"
                android:padding="@dimen/padding_double">

                <RelativeLayout
                    android:id="@+id/layout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginTop="@dimen/padding_half">

                    <View
                        style="@style/view_vertical_border"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tv_item_name"
                        style="@style/eightBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin"
                        android:text="@string/select_topic" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_border"
                    style="@style/view_cutline"
                    android:layout_below="@+id/tv_item_name" />

                <LinearLayout
                    android:id="@+id/layout_select_topic_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/view_height"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_login_right"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_yida"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yida_yellow"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_yida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_message_white"
                android:drawablePadding="@dimen/padding"
                android:text="益答"
                android:textColor="@color/white"
                android:textSize="@dimen/eightSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_appoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_appoint"
                android:drawablePadding="@dimen/padding"
                android:text="@string/my_appoint_init"
                android:textColor="@color/white"
                android:textSize="@dimen/eightSize" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000"
        android:visibility="gone" />
</RelativeLayout>