<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/cutline_bottom"
            android:layout_marginTop="1dp"
            android:layout_above="@+id/layout_tab"
            style="@style/view_cutline"/>

        <FrameLayout
            android:id="@+id/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:layout_alignParentBottom="true">

            <RadioGroup
                android:id="@+id/rg_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_tab_main"
                    style="@style/bottom_tab"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/tab_main_selector"
                    android:drawablePadding="@dimen/padding_half"
                    android:text="@string/tab_main" />

                <RadioButton
                    android:id="@+id/rb_tab_find"
                    style="@style/bottom_tab"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_half"
                    android:drawableTop="@drawable/tab_find_selector"
                    android:text="@string/tab_find" />

                <RadioButton
                    style="@style/bottom_tab"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_half"
                    android:drawableTop="@drawable/tab_find_selector"
                    android:visibility="invisible"
                    />
                <RadioButton
                    android:id="@+id/rb_tab_message"
                    style="@style/bottom_tab"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_half"

                    android:drawableTop="@drawable/tab_message_selector"
                    android:text="@string/tab_message" />


                <RadioButton
                    android:id="@+id/rb_tab_my"
                    style="@style/bottom_tab"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_half"

                    android:drawableTop="@drawable/tab_my_selector"
                    android:text="@string/tab_my" />
            </RadioGroup>

            <ImageView
                android:id="@+id/img_message_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="86dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_new"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_my_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="18dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_new"
                android:visibility="invisible" />
        </FrameLayout>

        <!--<View-->
        <!--android:id="@+id/cutline"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_above="@id/rg_main"-->
        <!--android:background="@color/gray"-->
        <!--android:visibility="gone" />-->

        <FrameLayout
            android:id="@+id/main_tab_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cutline_bottom"
            />
        <View
            android:id="@+id/popview_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:background="@color/translucent_over_background"/>
        <FrameLayout
            android:id="@+id/layout_first"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_first_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="264dp"
                android:minHeight="40dp"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                >
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="264dp"
                >
                <View
                    android:id="@+id/view_home_tip"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/padding_double"
                    android:background="@drawable/bg_dashed_border"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_home_tip"
                    android:layout_toRightOf="@+id/view_home_tip"
                    android:layout_alignBottom="@+id/view_home_tip"
                    android:layout_marginBottom="@dimen/padding_half"
                    android:layout_marginLeft="@dimen/padding_half"
                    />
                <ImageButton
                    android:id="@+id/imbtn_finish_tip"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_finish_tip"
                    android:background="@color/transparent"
                    android:layout_below="@+id/view_home_tip"
                    android:layout_marginTop="@dimen/view_height"
                    />
            </RelativeLayout>
        </FrameLayout>
        <View
            android:id="@+id/view_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_shadow"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/tab_height"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_expert"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:button="@null"
                android:visibility="gone"
                android:layout_marginBottom="90dp"
                android:onClick="becomeExpert"
                android:background="@mipmap/ic_chengweidianshi"
                android:layout_marginRight="30dp"
                />
            <Button
                android:id="@+id/btn_yida"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:button="@null"
                android:visibility="gone"
                android:layout_marginBottom="90dp"
                android:onClick="openYida"
                android:background="@mipmap/ic_kaitongyida"
                android:layout_marginRight="30dp"
                />
            <Button
                android:id="@+id/btn_tiwen"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:button="@null"
                android:visibility="gone"
                android:onClick="tiWen"
                android:layout_marginBottom="90dp"
                android:background="@mipmap/ic_woyaotiwen"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_yida_bg"/>
            <ImageView
                android:id="@+id/imv_yida_close"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_yida_close"/>
            <ImageView
                android:id="@+id/imv_yida_open"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_yida_open"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="益答"
                style="@style/sixDarkGray"
                android:gravity="bottom"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="5dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_totop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="@dimen/padding_double"
        android:visibility="gone"
        android:src="@mipmap/ic_home_totop"
        android:layout_gravity="right|bottom"
        />
    <include
        android:id="@+id/layout_main"
        layout="@layout/bar_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        />

    <View
        android:id="@+id/cutline_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/view_height"
        android:background="@color/gray"/>
</FrameLayout>